<h2>Create System</h2>

<form class="form-horizontal" action="/system/create" method="POST">
  <input type="hidden" name="_csrf" value="{{_csrf}}" />
    
  <div class="form-group">
    <label class="col-sm-3 control-label" for="name">Name</label>
    <div class="col-sm-7">
      <input class="form-control" type="text" name="name" id="name" placeholder="Name" required="" value="{{params.name}}" autofocus />
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-sm-3 control-label" for="email">Timezone</label>
    <div class="col-sm-7">
    <select name="timezone">
      {{#each timeZonesList}}
        <option value="Pacific Time (US & Canada)">{{this}}</option>
      {{/each}}
    </select>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <button class="btn btn-success" type="submit">Next</button>
    </div>
  </div>
</form>
